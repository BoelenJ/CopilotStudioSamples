{
  "$schema": "https://schemas.botframework.com/schemas/skills/skill-manifest-2.0.0.json",
  "$id": "DecryptionSkill",
  "name": "Decryption Skill",
  "version": "1.0",
  "description": "Skill to decrypt token to return ID",
  "publisherName": "Microsoft",
  "privacyUrl": "https://myurlhere/privacy.html",
  "copyright": "Copyright (c) Microsoft Corporation. All rights reserved.",
  "license": "",
  "iconUrl": "https://myurlhere/icon.png",
  "tags": [
    "sample",
    "echo"
  ],
  "endpoints": [
    {
      "name": "default",
      "protocol": "BotFrameworkV3",
      "description": "Default endpoint for the skill",
      "endpointUrl": "https://mattfarmbotserv.azurewebsites.net/api/messages",
      "msAppId": "e33db062-8a41-4cff-aa1c-a44bb92d81b6"
    }
  ],
  "activities": {
    "tokenDecryption": {
      "type": "message",
      "description": "Returns a user identifier from an encryted token",
      "value": {
        "$ref": "#/definitions/tokenEncrypted"
      },
      "resultValue": {
        "$ref": "#/definitions/userId"
      }
    }
  },
  "definitions": {
    "tokenEncrypted": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "description": "Encrypted token signed by private key"
        }
      }
    },
    "userId": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Decrypted UserID value"
        }
      }
    }
  }
}